
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Ekleme Sayfası </h2>
<form method="post">
    <label> Kategori Adı</label>
    <input type="text" class="form-control" name="CategoryName" placeholder="Kategoriyi Giriniz" required/>
    <br />
    <label> Kategori Durumu</label>
    <input type="text" class="form-control" name="CategoryStatus" placeholder="Durumu Giriniz" />
    <br />
    <button class="btn-info">Kategori Ekle</button>
</form>

